{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Flash",
			"type": "shell",
			"command": "make flash",
			"group": "build",
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make",
			"args": [
				"clean"
			],
			"group": "build",
		}
	]
}